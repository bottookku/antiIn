<?php
$ipp1 = array(
'10.0.1.0/24',
'10.0.2.0/24',
'10.0.4.0/24',
'10.0.5.0/24',
'10.0.10.0/24',
'10.0.8.0/24',
'10.0.3.0/24',
'10.0.7.0/24',
'10.0.6.0/24');
print_r($ipp1);
echo "<br>";
$x = 0;
$y = 1;
foreach ($ipp1 as $ipp2)
{
	echo "<meta charset=utf-8>";
	$ipp3 = explode('.',$ipp2);
	$tu = 0;
	echo "СРАВНИВАЮ то что в массиве $ipp3[1].$ipp3[2] и ТО что по порядку $x.$y ----------";
	if ($ipp3[1].$ipp3[2] == $x.$y)
	{//Все по порядку идет
		echo "OK $ipp3[1].$ipp3[2]<br>";
		$x = $ipp3[1];
		$y = $ipp3[2] + 1;
	}
	else
	{//не по порядку Пропало
	echo "Не по порядку сразу $ipp3[1].$ipp3[2] а так ищу $x.$y<br>";

		foreach($ipp1 as $ipp5)
		{//ИЩЕМ ПРОПАЖУ!!!
			$ipp6 = explode('.',$ipp5);
			if ($x.$y == $ipp6[1].$ipp6[2])
			{//нашлось!!!
				echo "нашлось $x.$y ";
				$y = $y+ 1;
				echo "ПРОДОЛЖАЮ ИСКАКТЬ $x,$y<br>";
				$tu = 0;
			}
			else
			{//не нашлось!!!
				//echo "Не нашлось при переборе $x.$y";
				$tu = 1;
			}
		}
	if ($tu == 1)
	{//НЕ НАШЛОСЬ после поиска!!!
		echo "<br>не нашлось добалвяю эту".$x.".".$y;
		break;
	}
	}

}
?>
